{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "state.changed",
        "job.started",
        "job.progress",
        "job.completed",
        "job.failed",
        "qa.report",
        "deploy.status"
      ]
    },
    "payload": {"type": "object"},
    "project_id": {"type": "integer"},
    "ts": {"type": "string", "format": "date-time"},
    "trace_id": {"type": "string"}
  },
  "required": ["type", "project_id"],
  "additionalProperties": true
}
